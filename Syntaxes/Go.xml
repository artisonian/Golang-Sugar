<?xml version="1.0"?>
<syntax name="language-root.go">

    <zones>
        <include collection="comments" />
        <include collection="strings" />
        <include collection="keywords" />
    </zones>
    
    <library>
        <collection name="comments">
            <zone name="comment.line">
                <starts-with>
                    <expression>(//)</expression>
                    <capture number="1" name="punctuation.begin" />
                </starts-with>
                <ends-with>$[\n\r]*</ends-with>
            </zone>
            <zone name="comment.block">
                <starts-with>
                    <expression>/\*</expression>
                    <capture number="0" name="punctuation.begin"/>
                </starts-with>
                <ends-with>
                    <expression>\*/</expression>
                    <capture number="0" name="punctuation.end"/>
                </ends-with>
            </zone>
        </collection>
        
        <collection name="strings">
            <zone name="string.quoted">
                <starts-with>
                    <expression>"</expression>
                    <capture number="0" name="punctuation.begin" />
                </starts-with>
                <ends-with>
                    <expression>"</expression>
                    <capture number="0" name="punctuation.end" />
                </ends-with>
            </zone>
            <zone name="string.literal">
                <starts-with>
                    <expression>`</expression>
                    <capture number="0" name="punctuation.begin" />
                </starts-with>
                <ends-with>
                    <expression>`</expression>
                    <capture number="0" name="punctuation.end" />
                </ends-with>
            </zone>
        </collection>
        
        <collection name="keywords">
            <zone name="keyword.control">
                <expression>\b(break|case|continue|default|defer|else|fallthrough|for|goto|if|range|return|select|switch)\b</expression>
            </zone>
            <zone name="keyword.storage">
                <expression>\b(const|type|var)\b</expression>
            </zone>
            <zone name="keyword.types">
                <expression>\b(chan|interface|map|struct)\b</expression>
            </zone>
            <zone name="keyword.function">
                <expression>\b(func|go)\b</expression>
            </zone>
            <zone name="keyword.import">
                <expression>\b(import|package)\b</expression>
            </zone>
        </collection>
    </library>

</syntax>